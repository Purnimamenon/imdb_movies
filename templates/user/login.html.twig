{% extends 'base.html.twig' %}
{% block body %}
<div class="main">
<div id="img">
<img src="{{ asset('images/imdb_logo.png') }}" alt="Imdb_Movies">
</div>
<div class="form">
{% for message in app.flashes('notice') %}
    <div class="flash-notice" style="color:red;">
        {{ message }}
    </div>
{% endfor %}
  <h3>SignIn account</h3>
<div>
<form method="post">
    {{ form_widget(form) }}
    <center><button type="submit">Sign in</button></center>
    <br>
    <br>
    <center>
    <a href="{{ url('index') }}">
    <button type="button" style="background-color:white;">Create your ImDb account</button>
    </a>
    </center>

</div>
</form>


 {% endblock %}