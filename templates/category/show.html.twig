{% extends 'admin/base.html.twig' %}

{% block title %}Category{{ category.id }}{% endblock %}

{% block body %}
    <h1>Category{{ category.id }}</h1>

    <ul>
        <li>Category Name: {{ category.categoryname }}</li>
        <li>Category Description: {{ category.categorydescription }}</li>
    </ul>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Edit</a>
    <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-danger">Delete</a>
{% endblock %}